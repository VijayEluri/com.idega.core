<?xml version="1.0"?>

<faces-config
	xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
version="1.2">

	<application>
		<message-bundle>com.idega.core.localisation.data.DefaultFacesMessages</message-bundle>
	</application>
	<component>
		<component-type>Page</component-type>
		<component-class>com.idega.presentation.Page</component-class>
	</component>
	
	<component>
		<component-type>HelpButton</component-type>
		<component-class>com.idega.presentation.ui.HelpButton</component-class>
	</component>
	
	<component>
		<component-type>Help</component-type>
		<component-class>com.idega.idegaweb.help.presentation.Help</component-class>
	</component>
	
	<component>
		<component-type>idega_CreditCardNumber</component-type>
		<component-class>com.idega.presentation.ui.UICreditCardNumber</component-class>
	</component>
	
	<component>
		<component-type>idega_DateInput</component-type>
		<component-class>com.idega.presentation.ui.UIDateInput</component-class>
	</component>
	
	<managed-bean>
		<managed-bean-name>wizardControlValues</managed-bean-name>
		<managed-bean-class>com.idega.presentation.wizard.WizardControlValues</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>pageSessionPoller</managed-bean-name>
		<managed-bean-class>com.idega.business.PageSessionPoller</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>webUtil</managed-bean-name>
		<managed-bean-class>com.idega.util.WebUtil</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>

</faces-config>
