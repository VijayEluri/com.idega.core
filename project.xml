<?xml version="1.0" encoding="UTF-8"?>
<project>
  <extend>${base.project.dir}/base-project.xml</extend>
  <name>idegaWeb JavaServer Faces</name>
  <artifactId>com.idega.faces</artifactId>
  <currentVersion>0.9.1-SNAPSHOT</currentVersion>
  <inceptionYear>2003</inceptionYear>
  <shortDescription>idegaWeb Faces is JavaServer Faces implementation</shortDescription>
  <versions>
    <version>
      <id>0.9</id>
      <name>0.9</name>
      <tag>FACES_0_9</tag>
    </version>
  </versions>
  <branches/>
  <developers>
    <developer>
      <id>tryggvil</id>
      <name>Tryggvi Larusson</name>
      <email>tryggvi@idega.is</email>
      <organization>idega software</organization>
      <roles/>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <groupId>bundles</groupId>
      <artifactId>com.idega.core</artifactId>
      <!--<version>1.9</version>-->
      <version>SNAPSHOT</version>
      <type>jar</type>
      <url>http://www.idega.com/</url>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>
    <dependency>
      <groupId>bundles</groupId>
      <artifactId>com.idega.builder</artifactId>
      <!--<version>1.1</version>-->
      <version>SNAPSHOT</version>
      <type>jar</type>
      <url>http://www.idega.com/</url>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>
    <dependency>
      <groupId>ejb</groupId>
      <artifactId>ejb</artifactId>
      <version>2.0</version>
      <type>jar</type>
      <url>http://java.sun.com/products/ejb/docs.html</url>
      <properties>
        <idegaweb.bundle.include>true</idegaweb.bundle.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>jta</groupId>
      <artifactId>jta</artifactId>
      <version>spec1_0_1</version>
      <type>jar</type>
      <url>http://java.sun.com/products/jta/jta-1_0_1B-doc</url>
      <properties>
        <idegaweb.bundle.include>true</idegaweb.bundle.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>2.4</version>
      <type>jar</type>
      <url>http://java.sun.com/products/servlet/docs.html</url>
      <properties/>
    </dependency>
    <dependency>
      <groupId>servlets.com</groupId>
      <artifactId>cos</artifactId>
      <version>05Nov2002</version>
      <type>jar</type>
      <url>http://www.servlets.com/cos/</url>
      <properties/>
    </dependency>
    <dependency>
      <groupId>myfaces</groupId>
      <artifactId>jsf-api</artifactId>
      <version>1.0</version>
      <type>jar</type>
      <url>http://java.sun.com/j2ee/javaserverfaces/</url>
      <properties/>
    </dependency>
    <dependency>
      <groupId>myfaces</groupId>
      <artifactId>myfaces</artifactId>
      <version>1.0.5</version>
      <type>jar</type>
      <url>http://myfaces.org/</url>
      <properties/>
    </dependency>
    <dependency>
      <groupId>smile</groupId>
      <artifactId>smile</artifactId>
      <version>0.3.3</version>
      <type>jar</type>
      <url>http://smile.sourceforge.net/</url>
	  <properties>
	 <idegaweb.bundle.include>true</idegaweb.bundle.include>
	 </properties>
    </dependency>
    <!-- commons-logging already included in the core bundle (because it is also used by com.idega.block.creditcard) -->
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
      <type>jar</type>
      <url>http://jakarta.apache.org/commons/logging</url>
      <properties/>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>
  </build>
</project>
