    </dependency>
    <dependency>
      <!-- Javax Servlet API spec 2.3   -->
      <id>servletapi</id>
      <version>2.3</version>
      <url>http://java.sun.com/products/servlet/docs.html</url>
    </dependency>
    <dependency>
